# Production Environment Variables for TripPhoto Frontend
# zstus.synology.me:8095 단일 포트 배포 설정

# API 서버 URL (단일 포트 사용)
REACT_APP_API_URL=http://zstus.synology.me:8095/api

# 이미지 서빙 URL (API와 동일한 포트 사용 - 단일 포트 통합)
REACT_APP_IMAGE_BASE_URL=http://zstus.synology.me:8095

# 빌드 최적화
GENERATE_SOURCEMAP=false

# Production optimizations
REACT_APP_NODE_ENV=production

# Security headers (these will be added by Nginx, but good to have as reference)
REACT_APP_ENABLE_SECURITY_HEADERS=true

# Performance settings
REACT_APP_ENABLE_SW=true

# Analytics (add your analytics ID when needed)
# REACT_APP_GA_TRACKING_ID=

# Error reporting (add your service when needed)  
# REACT_APP_SENTRY_DSN=