# TripPhoto Backend Environment Variables for Docker Production

# Database Configuration  
DATABASE_URL=sqlite:////var/lib/triphoto/triphoto.db

# Security Settings - GENERATED KEYS
SECRET_KEY=$(python3 -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=$(python3 -c "import secrets; print(secrets.token_urlsafe(32))")

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=False

# CORS Configuration for Docker Environment
ALLOWED_ORIGINS=http://zstus.synology.me:8095,http://localhost:80,http://127.0.0.1:80,http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
UPLOAD_DIR=/opt/triphoto/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_ENABLED=True
DEFAULT_RATE_LIMIT=100/minute

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/triphoto/backend.log

# Security Headers (HTTP only for Docker environment)
SECURITY_HEADERS_HSTS=False
SECURITY_HEADERS_CSP_CONNECT_SRC=http://zstus.synology.me:8095,http://localhost:80